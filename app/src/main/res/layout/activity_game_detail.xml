                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Memory"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/memoryreq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
